<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.wofford.sykesda.wocoapptest.MainMenuLoggedIn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TableRow android:layout_weight=".3">

                <ImageButton
                    android:id="@+id/mapActivityBttn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"

                    app:srcCompat="@mipmap/ic_campus_map_foreground" />

                <ImageButton
                    android:id="@+id/tvGuideBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_media_play"
                    app:srcCompat="@mipmap/ic_channel_guide_foreground" />

                <ImageButton
                    android:id="@+id/directoryBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_menu_crop"
                    app:srcCompat="@mipmap/ic_directory_foreground" />
            </TableRow>

            <TableRow android:layout_weight=".3">

                <ImageButton
                    android:id="@+id/emerGolfActBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_menu_view"
                    app:srcCompat="@mipmap/ic_hotline_foreground" />

                <ImageButton
                    android:id="@+id/classScheduleBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_menu_send"
                    app:srcCompat="@mipmap/ic_class_schedule_foreground" />

                <ImageButton
                    android:id="@+id/dailyAnnouncementsBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_menu_gallery"
                    app:srcCompat="@mipmap/ic_events_foreground" />
            </TableRow>

            <TableRow android:layout_weight=".3">

                <ImageButton
                    android:id="@+id/foodMenuBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_menu_add"
                    app:srcCompat="@mipmap/ic_menu_foreground" />

                <ImageButton
                    android:id="@+id/terrierBucksBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_menu_call"
                    app:srcCompat="@mipmap/ic_virtual_id_foreground" />

                <ImageButton
                    android:id="@+id/settingsBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    app:srcCompat="@mipmap/ic_settings_foreground" />

            </TableRow>
        </TableLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

